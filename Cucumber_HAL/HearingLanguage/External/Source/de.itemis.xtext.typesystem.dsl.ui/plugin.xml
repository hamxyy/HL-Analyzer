<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>

<plugin>

    <extension
            point="org.eclipse.ui.editors">
        <editor
            class="de.itemis.xtext.typesystem.dsl.ui.TsDslExecutableExtensionFactory:org.eclipse.xtext.ui.editor.XtextEditor"
            contributorClass="org.eclipse.ui.editors.text.TextEditorActionContributor"
            default="true"
            extensions="ts"
            id="de.itemis.xtext.typesystem.dsl.TsDsl"
            name="TsDsl Editor">
        </editor>
    </extension>
    <extension
        point="org.eclipse.ui.handlers">
        <handler
            class="de.itemis.xtext.typesystem.dsl.ui.TsDslExecutableExtensionFactory:org.eclipse.xtext.ui.editor.hyperlinking.OpenDeclarationHandler"
            commandId="org.eclipse.xtext.ui.editor.hyperlinking.OpenDeclaration">
            <activeWhen>
                <reference
                    definitionId="de.itemis.xtext.typesystem.dsl.TsDsl.Editor.opened">
                </reference>
            </activeWhen>
        </handler>
        <handler
            class="de.itemis.xtext.typesystem.dsl.ui.TsDslExecutableExtensionFactory:org.eclipse.xtext.ui.editor.handler.ValidateActionHandler"
            commandId="de.itemis.xtext.typesystem.dsl.TsDsl.validate">
         <activeWhen>
            <reference
                    definitionId="de.itemis.xtext.typesystem.dsl.TsDsl.Editor.opened">
            </reference>
         </activeWhen>
      </handler>
    </extension>
    <extension point="org.eclipse.core.expressions.definitions">
        <definition id="de.itemis.xtext.typesystem.dsl.TsDsl.Editor.opened">
            <and>
                <reference definitionId="isActiveEditorAnInstanceOfXtextEditor"/>
                <with variable="activeEditor">
                    <test property="org.eclipse.xtext.ui.editor.XtextEditor.languageName" 
                        value="de.itemis.xtext.typesystem.dsl.TsDsl" 
                        forcePluginActivation="true"/>
                </with>        
            </and>
        </definition>
    </extension>
    <extension
            point="org.eclipse.ui.preferencePages">
        <page
            class="de.itemis.xtext.typesystem.dsl.ui.TsDslExecutableExtensionFactory:org.eclipse.xtext.ui.editor.preferences.LanguageRootPreferencePage"
            id="de.itemis.xtext.typesystem.dsl.TsDsl"
            name="TsDsl">
            <keywordReference id="de.itemis.xtext.typesystem.dsl.ui.keyword_TsDsl"/>
        </page>
        <page
            category="de.itemis.xtext.typesystem.dsl.TsDsl"
            class="de.itemis.xtext.typesystem.dsl.ui.TsDslExecutableExtensionFactory:org.eclipse.xtext.ui.editor.syntaxcoloring.SyntaxColoringPreferencePage"
            id="de.itemis.xtext.typesystem.dsl.TsDsl.coloring"
            name="Syntax Coloring">
            <keywordReference id="de.itemis.xtext.typesystem.dsl.ui.keyword_TsDsl"/>
        </page>
        <page
            category="de.itemis.xtext.typesystem.dsl.TsDsl"
            class="de.itemis.xtext.typesystem.dsl.ui.TsDslExecutableExtensionFactory:org.eclipse.xtext.ui.editor.templates.XtextTemplatePreferencePage"
            id="de.itemis.xtext.typesystem.dsl.TsDsl.templates"
            name="Templates">
            <keywordReference id="de.itemis.xtext.typesystem.dsl.ui.keyword_TsDsl"/>
        </page>
    </extension>
    <extension
        point="org.eclipse.ui.keywords">
        <keyword
            id="de.itemis.xtext.typesystem.dsl.ui.keyword_TsDsl"
            label="TsDsl"/>
    </extension>
    <extension
         point="org.eclipse.ui.commands">
      <command
            description="Trigger expensive validation"
            id="de.itemis.xtext.typesystem.dsl.TsDsl.validate"
            name="Validate">
      </command>
    </extension>
    <extension point="org.eclipse.ui.menus">
        <menuContribution
            locationURI="popup:#TextEditorContext?after=group.edit">
             <command
                 commandId="de.itemis.xtext.typesystem.dsl.TsDsl.validate"
                 style="push"
                 tooltip="Trigger expensive validation">
            <visibleWhen checkEnabled="false">
                <reference
                    definitionId="de.itemis.xtext.typesystem.dsl.TsDsl.Editor.opened">
                </reference>
            </visibleWhen>
         </command>  
         </menuContribution>
    </extension>
    <extension point="org.eclipse.ui.menus">
		<menuContribution locationURI="popup:#TextEditorContext?endof=group.find">
			<command commandId="org.eclipse.xtext.ui.editor.FindReferences">
				<visibleWhen checkEnabled="false">
                	<reference definitionId="de.itemis.xtext.typesystem.dsl.TsDsl.Editor.opened">
                	</reference>
            	</visibleWhen>
			</command>
		</menuContribution>
	</extension>
	<extension point="org.eclipse.ui.handlers">
	    <handler
            class="de.itemis.xtext.typesystem.dsl.ui.TsDslExecutableExtensionFactory:org.eclipse.xtext.ui.editor.findrefs.FindReferencesHandler"
            commandId="org.eclipse.xtext.ui.editor.FindReferences">
            <activeWhen>
                <reference
                    definitionId="de.itemis.xtext.typesystem.dsl.TsDsl.Editor.opened">
                </reference>
            </activeWhen>
        </handler>
    </extension>   

<!-- adding resource factories -->

	<extension
		point="org.eclipse.emf.ecore.extension_parser">
		<parser
			class="de.itemis.xtext.typesystem.dsl.ui.TsDslExecutableExtensionFactory:org.eclipse.xtext.resource.IResourceFactory"
			type="ts">
		</parser>
	</extension>
	<extension point="org.eclipse.xtext.extension_resourceServiceProvider">
        <resourceServiceProvider
            class="de.itemis.xtext.typesystem.dsl.ui.TsDslExecutableExtensionFactory:org.eclipse.xtext.ui.resource.IResourceUIServiceProvider"
            uriExtension="ts">
        </resourceServiceProvider>
    </extension>



   <extension
         point="org.eclipse.xtext.builder.participant">
      <participant
            class="de.itemis.xtext.typesystem.dsl.ui.TsDslExecutableExtensionFactory:org.eclipse.xtext.builder.IXtextBuilderParticipant">
      </participant>
   </extension>

	<!-- Quick Outline -->
	<extension
		point="org.eclipse.ui.handlers">
		<handler 
			class="de.itemis.xtext.typesystem.dsl.ui.TsDslExecutableExtensionFactory:org.eclipse.xtext.ui.editor.outline.quickoutline.ShowQuickOutlineActionHandler"
			commandId="org.eclipse.xtext.ui.editor.outline.QuickOutline">
			<activeWhen>
				<reference
					definitionId="de.itemis.xtext.typesystem.dsl.TsDsl.Editor.opened">
				</reference>
			</activeWhen>
		</handler>
	</extension>
	<extension
		point="org.eclipse.ui.commands">
		<command
			description="Open the quick outline."
			id="org.eclipse.xtext.ui.editor.outline.QuickOutline"
			name="Quick Outline">
		</command>
	</extension>
	<extension point="org.eclipse.ui.menus">
		<menuContribution
			locationURI="popup:#TextEditorContext?after=group.open">
			<command commandId="org.eclipse.xtext.ui.editor.outline.QuickOutline"
				style="push"
				tooltip="Open Quick Outline">
				<visibleWhen checkEnabled="false">
					<reference definitionId="de.itemis.xtext.typesystem.dsl.TsDsl.Editor.opened"/>
				</visibleWhen>
			</command>
		</menuContribution>
	</extension>
   <!-- quickfix marker resolution generator -->
   <extension
         point="org.eclipse.ui.ide.markerResolution">
      <markerResolutionGenerator
            class="de.itemis.xtext.typesystem.dsl.ui.TsDslExecutableExtensionFactory:org.eclipse.xtext.ui.editor.quickfix.MarkerResolutionGenerator">
      </markerResolutionGenerator>
   </extension>

  <extension point="org.eclipse.compare.contentViewers">
    <viewer id="de.itemis.xtext.typesystem.dsl.TsDsl.compare.contentViewers"
            class="de.itemis.xtext.typesystem.dsl.ui.TsDslExecutableExtensionFactory:org.eclipse.xtext.ui.compare.InjectableViewerCreator"
            extensions="ts">
    </viewer>
  </extension>
  <extension point="org.eclipse.compare.contentMergeViewers">
    <viewer id="de.itemis.xtext.typesystem.dsl.TsDsl.compare.contentMergeViewers"
            class="de.itemis.xtext.typesystem.dsl.ui.TsDslExecutableExtensionFactory:org.eclipse.xtext.ui.compare.InjectableViewerCreator"
            extensions="ts" label="TsDsl Compare">
     </viewer>
  </extension>
  <extension point="org.eclipse.ui.editors.documentProviders">
    <provider id="de.itemis.xtext.typesystem.dsl.TsDsl.editors.documentProviders"
            class="de.itemis.xtext.typesystem.dsl.ui.TsDslExecutableExtensionFactory:org.eclipse.xtext.ui.editor.model.XtextDocumentProvider"
            extensions="ts">
    </provider>
  </extension>


</plugin>
